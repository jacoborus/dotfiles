# This tmux statusbar config was created by tmuxline.vim
# on mi√©, 01 jul 2015

set -g status-bg "colour235"
set -g message-command-fg "colour252"
set -g status-justify "left"
set -g status-left-length "100"
set -g status "on"
set -g pane-active-border-fg "colour117"
set -g message-bg "colour235"
set -g status-right-length "100"
set -g status-right-attr "none"
set -g message-fg "colour252"
set -g message-command-bg "colour240"
set -g status-attr "none"
set -g pane-border-fg "colour240"
set -g status-left-attr "none"
setw -g window-status-fg "colour248"
setw -g window-status-attr "none"
setw -g window-status-activity-bg "colour235"
setw -g window-status-activity-attr "none"
setw -g window-status-activity-fg "colour117"
setw -g window-status-separator ""
setw -g window-status-bg "colour235"
set -g status-left "#[fg=colour235,bg=colour117] #S "
set -g status-right "#[fg=colour117,bg=colour235,bold] %R"
setw -g window-status-format "#[fg=colour238,bg=colour235,nobold,nounderscore,noitalics]#[default] #I #W "
setw -g window-status-current-format "#[fg=colour235,bg=colour117,bold] #I #W "
