{
  "$schema": "https://opencode.ai/config.json",
  "mcp": {
    "chrome-devtools": {
      "type": "local",
      "command": [
        "npx",
        "-y",
        "chrome-devtools-mcp@latest"
      ],
      "enabled": false
    },
    "docker-mcp": {
      "type": "local",
      "command": [
        "uvx",
        "docker-mcp"
      ],
    }
  },
  "autoupdate": true,
  "tui": {
    "scroll_speed": 2,
    "scroll_acceleration": {
      "enabled": true
    }
  }
}
